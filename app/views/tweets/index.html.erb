<h1>GD match</h1>
<% if user_signed_in? %> <%= link_to "マイページへ", user_path(current_user.id) %>　 <% end %>
<h2>参加者を募集する</h2>

<%= form_for @tweet do |f| %>
<%# https://rails.256.tips/ %>
<div class="field">
  <%= f.label :"開催日時" %>
  <%= f.datetime_field :hosttime %>
</div>

<div class="field">
  <%= f.label :"テーマ型" %>
  <%= f.select :thematype, [["課題解決型", "「課題解決型」"], ["自由討論型", "「自由討論型」"], ["ディベート型", "「ディベート型」"], ["選択型", "「選択型」"]], include_blank: "選択して下さい" %>
</div>

<div class="field">
  <%= f.label :"テーマ" %>
  <%= f.text_field :thema, :size => 140 %>
</div>

<div class="field">
  <%= f.label :"グループ人数" %>
  <%= f.number_field :number, step: "1", min: "3" %>名
</div>

<div class="field">
  <%= f.label :"レベル" %>
  <%= f.select :level, [["初級", "初級"], ["中級", "中級"], ["上級", "上級"]], include_blank: "選択して下さい" %>
</div>

<div class="field">
  <%= f.label :"ミーティングツール" %>
  <%= f.select :meetingtype, [["Zoom", "Zoom"], ["Teams", "Teams"], ["Webex", "Webex"], ["GoogleMeet", "GoogleMeet"], ["Skype", "Skype"], ["Calling", "Calling"], ["Discord", "Discord"]], include_blank: "選択して下さい" %>
</div>

<div class="field">
  <%= f.label :"ミーティング情報" %>
  <%= f.text_field :meeting, :size => 140 %>
</div>

<div class="field">
  <%= f.label :"募集期限" %>
  <%= f.datetime_field :limittime %>
</div>

<div class="field">
  <span class="field__label">
    <%= f.label :"コメント" %>
  </span>
  <span class="field__comment field__comment--red">
    <%= f.text_field :comment, :size => 140 %>
  </span>
</div>

<br>
<%= f.submit "募集する" %>

<% end %>

<h2>参加者になる</h2>

<h3>募集枠を検索</h3>
<%= form_tag({controller:"tweets",action:"index"}, method: :get) do %>
<%= text_field_tag :search %>
<%= submit_tag '検索する'  %>
<% end %>

<br>
<%= page_entries_info @tweets %>

<div class="tweets-container">
  <% @tweets.each do |t| %>
  <div class="tweet">
    <br>
    <h4><%= t.thematype %><%= t.thema %></h4><br>
    開催日時：<%= t.hosttime %><br>
    グループ人数：<%= t.number %>名<br>
    レベル：<%= t.level %><br>
    ミーティングツール：<%= t.meetingtype %><br>
    ミーティング情報：<%= t.meeting %><br>
    募集期限：<%= t.limittime %><br>
    コメント：<%= t.comment %><br>
    投稿日時：<%= t.created_at %><br>

    <% if user_signed_in? %>
    <% if current_user.already_liked?(t) %>
    <%= link_to tweet_like_path(id: t.id, tweet_id: t.id), method: :delete do %>
    <i class="fas fa-heart"></i><%= t.likes.count %>
    <% end %>
    <% else %>
    <%= link_to tweet_likes_path(id: t.id, tweet_id: t.id), method: :post do %>
    <i class="far fa-heart"></i><%= t.likes.count %>
    <% end %>
    <% end %>
    <% else %>
    <i class="far fa-heart"></i><%= t.likes.count %>
    <% end %><br>

    <a href="/users/<%= t.user.id %>"><%= t.user.name %></a><br>

    <%= button_to "確認", tweet_path(t.id) %>
    <% if user_signed_in? && current_user.id == t.user_id %>
    <%= link_to "編集", edit_tweet_path(t.id) %> <%= link_to "削除", tweet_path(t.id), method: :delete %>
    <% end %><br>

  </div>

  <% end %>
</div>

<%= paginate @tweets %>
<br>
<%= button_to 'ログアウト', destroy_user_session_path, method: :delete %>